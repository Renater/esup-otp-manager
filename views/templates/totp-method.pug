script#totp-method(type='text/x-template').
    <div>
      <div class="card" style="margin: 25px 0;">
        <ol v-if="user.methods.totp.askActivation" class="row no-padding" style="margin: 0; list-style-position: inside;">
          <!-- generate -->
          <li class="col s12 m6" style="list-style-type: revert; padding-bottom: 1em;">
            <strong>Enregistrez</strong> votre clé TOTP, pour cela vous avez <em>plusieurs possibilités</em> :
            <ul class="browser-default totp-registration-ways">
              <li v-if="user.methods.totp.deepLink && infos.mobile" v-html="messages.api.methods.totp.registration_instructions.deeplink.replace('%DEEPLINK%', user.methods.totp.deepLink).replace('%ESUP_AUTH%', infos.esup_auth_download_link)" />
              <li v-if="user.methods.totp.uri && infos.mobile" v-html="messages.api.methods.totp.registration_instructions.otpauth_uri.replace('%URI%', user.methods.totp.uri).replace('%AUTHENTICATORS%', authentificators)" />
              <li v-if="!infos.mobile || !user.methods.totp.deepLink">
                <span v-html="messages.api.methods.totp.registration_instructions.qrcode.replace('%AUTHENTICATORS%', authentificators)" />
                <p class="totp-qrcode center-align" v-html="user.methods.totp.qrCode" />
              </li>
              <li v-if="user.methods.totp.uri && (infos.isMacOs || infos.mobile == 'ios')" v-html="messages.api.methods.totp.registration_instructions.apple_otpauth_uri.replace('%URI%', 'apple-' + user.methods.totp.uri)" />
              <li v-html="messages.api.methods.totp.registration_instructions.manual.replace('%SECRET%', user.methods.totp.secret).replace('%AUTHENTICATORS%', authentificators)" />
            </ul>
          </li>
          <div class="row hide-on-med-and-up divider grey lighten-2" style="margin: 1em -0.1em;"></div>
          <!-- verify -->
          <li class="col s12 m6" v-if="user.methods.totp.qrCode" style="list-style-type: revert;">
            <span v-html="messages.api.methods.totp.howToActivate" />
            <div class="card-content">
              <div style="margin-bottom: 0;" class="row"><div class="col s1 m3"><span class="white-text"></span></div></div>
              <form @submit.prevent="validate" class="col s12 m9">
                <div class="input-field">
                  <input type="text" inputmode="numeric" v-model="user.methods.totp.validation_code" id="totpCode-input" required/>
                  <label for="totpCode-input" style="left: 0;">{{messages.api.methods.totp.enter_code}}</label>
                </div>
                <button type="submit" class="waves-effect waves-light btn green contrasted" style="margin-bottom: 1em;">
                  {{messages.api.action.validate}}<i class="material-icons right" aria-hidden="true">check</i>
                </button>
              </form>
            </div>
          </li>
        </ol>
        <div class="card-action" v-else>
          <div class="row" style="margin-bottom: 0;text-align: center;">
            <button class="waves-effect waves-light btn" @click=generate_totp>{{messages.api.action.generate_qrcode}}<i class="material-icons right" aria-hidden="true">sync</i></button>
          </div>
        </div>
      </div>
      <div role="list" lang="fr">
        <a role="listitem" target="_blank" title="Esup Auth - Disponible sur Google Play pour Android" href="https://play.google.com/store/apps/details?id=org.esupportail.esupAuth">
          <img width="150px" src="images/play-store.png" alt="Disponible sur Google Play"/>
        </a>
        <a role="listitem" target="_blank" title="Esup Auth - Télécharger dans l'App Store pour IOS" href="https://apps.apple.com/fr/app/esup-auth/id1563904941">
          <img width="150px" src="images/app-store.png" alt="Télécharger dans l'App Store"/>
        </a>
      </div>
    </div>
